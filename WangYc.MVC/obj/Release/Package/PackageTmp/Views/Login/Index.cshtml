@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>系统登录</title>
    <link href="~/Content/css/login/style2.0.css" rel="stylesheet" />
    <link href="~/Content/css/login/login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script>
        $(function () {
            //输入框 回车登录
            $("#vcode").keydown(function (ev) {
                var keyCode = ev.which;
                if (keyCode == 13) {
                    loginSub();
                }
            });
            // 切换验证码
            $("#verifyCode").click(function () {
                var _src = $(this).attr("src") + "&dom" + Math.random();
                $(this).attr("src", _src);
            });
        })
        //登录
        function loginSub() {
            $.ajax({
                type: 'POST',
                url: '@Url.Content("~/Login/Login")',
                data: { uname: $("#loginName").val(), upass: $("#loginPass").val(), vcode: $("#vcode").val() },
                success: function (msg) {
                    var jsonmsg = eval("(" + msg + ")");
                    if (jsonmsg.StatusCode == 100) {
                        window.location.href = '@Url.Content("~/home/contact")';
                    } else {
                        alert(jsonmsg.Message);
                    }
                },
                error: function () {
                    alert("请求发生错误");
                }
            });
        }
    </script>
</head>
<body>
    <div class="tyg-div">
        <ul>
            <li>让</li>
            <li><div style="margin-left:20px;">数</div></li>
            <li><div style="margin-left:40px;">据</div></li>
            <li><div style="margin-left:60px;">改</div></li>
            <li><div style="margin-left:80px;">变</div></li>
            <li><div style="margin-left:100px;">生</div></li>
            <li><div style="margin-left:120px;">活</div></li>
        </ul>
    </div>
    <div id="contPar" class="contPar">
        <div id="page1" style="z-index: 1; height: 153px;" class="resp0 cont_1">
            <div class="title0">行业智慧能力平台</div>
            <div class="title1">旅游、环境、气象、公共安全、大数据</div>
            <div class="imgGroug">
                <ul>
                    <img alt="" class="img0 png" src="~/Content/Images/login/page1_0.png">
                    <img alt="" class="img1 png" src="~/Content/Images/login/page1_1.png" style="margin-left: -84.901px; margin-top: -86.491px;">
                    <img alt="" class="img2 png" src="~/Content/Images/login/page1_2.png" style="margin-left: -84.901px; margin-top: -86.491px;">
                </ul>
            </div>
            <img alt="" class="img3 png" src="~/Content/Images/login/page1_3.jpg" style="margin-left: -351.396px; margin-top: -404.036px;">
        </div>
    </div>
    <div class="tyg-div-denglv">
        <div class="tyg-div-form">
            <form action="javascript:;">
                <h2>登录</h2><p class="tyg-p">欢迎进入后台管理</p>
                <div style="margin:5px 0px;">
                    <input type="text" class="login_username_and_password_input" name="loginName" id="loginName" placeholder="请输入账号..." />
                </div>
                <div style="margin:5px 0px;">
                    <input type="password" placeholder="请输入密码..." class="login_username_and_password_input" name="loginPass" id="loginPass" />
                </div>
                <div style="margin:5px 0px;">
                    <input type="text" style="width:150px;" class="login_verificationcode_input" name="vcode" id="vcode" placeholder="请输入验证码..." />
                    <img src="~/handler/getvcode.ashx?vname=@(CookieKeyDefine.LoginVCode)" class="getvcode" style="height: 30px; vertical-align: middle;padding-bottom: 4px;"
                         vname="@(CookieKeyDefine.LoginVCode)" title="点击切换" alt="验证码" id="verifyCode" />
                </div>
                <button type="button" onclick="loginSub()">登<span style="width:20px;"></span>录</button>
            </form>
        </div>
    </div>

